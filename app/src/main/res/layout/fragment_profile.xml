<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fancy="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.flaviofaria.kenburnsview.KenBurnsView
        android:id="@+id/image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/login_background" />

    <com.mikhaellopez.circularimageview.CircularImageView
        android:layout_marginTop="50dp"
        android:id="@+id/profile_photo"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        app:border="true"
        app:border_color="#ffffff"
        app:border_width="1dp"
        app:shadow="true"
        android:src="@drawable/gito" />

    <TextView
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Gito's Work Profile"
        android:id="@+id/profile_name"
        android:fontFamily="sans-serif-thin"
        android:textAllCaps="true"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:layout_below="@+id/profile_photo"
        android:layout_marginTop="50dp" />


    <com.joanzapata.iconify.widget.IconTextView
        android:id="@+id/email"
        android:visibility="invisible"
        android:layout_height="70dp"
        android:layout_width="300dp"
        android:layout_marginTop="50dp"
        android:textSize="20dp"
        android:textColor="#FFFFFF"
        android:layout_below="@+id/profile_name"
        android:layout_alignLeft="@+id/profile_photo"
        android:fontFamily="sans-serif-thin"
        android:layout_alignStart="@+id/profile_photo" />



    <com.joanzapata.iconify.widget.IconTextView
        android:id="@+id/facebook"
        android:visibility="invisible"
        android:layout_height="70dp"
        android:layout_width="300dp"
        android:layout_marginTop="50dp"
        android:textSize="20dp"
        android:textColor="#FFFFFF"
        android:layout_below="@+id/profile_name"
        android:layout_alignLeft="@+id/profile_photo"
        android:fontFamily="sans-serif-thin"
        android:layout_alignStart="@+id/profile_photo" />


    <com.joanzapata.iconify.widget.IconTextView
        android:id="@+id/instagram"
        android:visibility="invisible"
        android:layout_height="70dp"
        android:layout_width="300dp"
        android:layout_marginTop="50dp"
        android:textSize="20dp"
        android:textColor="#FFFFFF"
        android:layout_below="@+id/profile_name"
        android:layout_alignLeft="@+id/profile_photo"
        android:fontFamily="sans-serif-thin"
        android:layout_alignStart="@+id/profile_photo" />


    <com.joanzapata.iconify.widget.IconTextView
        android:id="@+id/linkedin"
        android:visibility="invisible"
        android:layout_height="70dp"
        android:layout_width="300dp"
        android:layout_marginTop="50dp"
        android:textSize="20dp"
        android:textColor="#FFFFFF"
        android:layout_below="@+id/profile_name"
        android:layout_alignLeft="@+id/profile_photo"
        android:fontFamily="sans-serif-thin"
        android:layout_alignStart="@+id/profile_photo" />

    <com.joanzapata.iconify.widget.IconTextView
        android:id="@+id/googleplus"
        android:visibility="invisible"
        android:layout_height="70dp"
        android:layout_width="300dp"
        android:layout_marginTop="50dp"
        android:textSize="20dp"
        android:textColor="#FFFFFF"
        android:layout_below="@+id/profile_name"
        android:fontFamily="sans-serif-thin"
        android:layout_alignLeft="@+id/profile_photo"
        android:layout_alignStart="@+id/profile_photo" />


    <com.joanzapata.iconify.widget.IconTextView
        android:id="@+id/twitter"
        android:visibility="invisible"
        android:layout_height="70dp"
        android:layout_width="300dp"
        android:layout_marginTop="50dp"
        android:textSize="20dp"
        android:textColor="#FFFFFF"
        android:layout_below="@+id/profile_name"
        android:fontFamily="sans-serif-thin"
        android:layout_alignLeft="@+id/profile_photo"
        android:layout_alignStart="@+id/profile_photo" />


    <android.support.design.widget.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/fab"
        android:src="@drawable/ic_add_circle_white_18dp"
        app:borderWidth="0dp"
        app:fabSize="normal"
        app:rippleColor="@color/colorPrimaryDark"
        android:layout_alignBottom="@+id/btn_add_profile"
        android:layout_toRightOf="@+id/profile_name"
        android:layout_toEndOf="@+id/profile_name">
    </android.support.design.widget.FloatingActionButton>


    <mehdi.sakout.fancybuttons.FancyButton
        android:id="@+id/btn_add_profile"
        android:layout_width="100sp"
        android:layout_height="wrap_content"
        android:paddingBottom="15dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="15dp"
        fancy:fb_borderColor="#ffffff"
        fancy:fb_borderWidth="1dp"
        fancy:fb_defaultColor="#00000000"
        fancy:fb_focusColor="#20ffffff"
        fancy:fb_radius="5dp"
        fancy:fb_textFont="ProductSans-Regular.ttf"
        fancy:fb_text="ADD"
        fancy:fb_textColor="#FFFFFF"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
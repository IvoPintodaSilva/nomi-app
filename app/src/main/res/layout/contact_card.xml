<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:fancy="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.example.ivosilva.nomi.contacts.ContactListFragment">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        fancy:cardBackgroundColor="#00ffffff"
        card_view:cardElevation="0dp"
        android:id="@+id/profile_card">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            >

            <com.mikhaellopez.circularimageview.CircularImageView
                android:layout_marginTop="5dp"
                android:id="@+id/person_photo"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="26dp"
                app:border="true"
                app:border_color="#ffffff"
                app:border_width="1dp"
                app:shadow="true"
                android:src="@drawable/gito" />

            <TextView
                android:layout_marginTop="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/person_name"
                android:text="Gito Jahsc"
                android:textColor="#ffffff"
                android:fontFamily="sans-serif-thin"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textStyle="bold"
                android:layout_marginLeft="110dp"
                android:layout_alignParentTop="true"/>

            <com.joanzapata.iconify.widget.IconTextView
                android:id="@+id/shared_contacts"
                android:layout_marginBottom="10dp"
                android:layout_width="wrap_content"
                android:layout_alignLeft="@id/person_name"
                android:layout_height="25dp"
                android:layout_below="@id/person_name"
                android:fontFamily="sans-serif-thin"
                android:text="Shared   {fa-phone} {fa-envelope-o} {fa-facebook} {fa-instagram} {fa-linkedin} {fa-google-plus}"
                android:textColor="#FFFFFF"/>




        </RelativeLayout>

    </android.support.v7.widget.CardView>


</LinearLayout>
